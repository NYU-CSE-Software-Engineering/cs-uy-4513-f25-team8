<% provide :title, "Contact Us" %>

<div class="row mb-4">
  <div class="col-12">
    <h1 class="display-5 fw-bold mb-2">
      <i class="bi bi-envelope me-2 text-primary"></i>Contact Us
    </h1>
    <p class="text-muted">Have a question or feedback? We'd love to hear from you!</p>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4">
        <%= form_with model: @contact, local: true do |f| %>
          <% if @contact.errors.any? %>
            <div class="alert alert-danger">
              <h6 class="alert-heading">Please fix the following errors:</h6>
              <ul class="mb-0">
                <% @contact.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "Your Name", class: "form-label fw-semibold" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter your name", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Your Email", class: "form-label fw-semibold" %>
            <%= f.email_field :email, class: "form-control", placeholder: "your.email@example.com", required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :subject, "Subject", class: "form-label fw-semibold" %>
            <%= f.text_field :subject, class: "form-control", placeholder: "What is this regarding?", required: true %>
          </div>

          <div class="mb-4">
            <%= f.label :message, "Message", class: "form-label fw-semibold" %>
            <%= f.text_area :message, class: "form-control", rows: 6, placeholder: "Please provide details about your question or feedback...", required: true %>
            <small class="form-text text-muted">Minimum 10 characters required</small>
          </div>

          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <%= link_to "Cancel", root_path, class: "btn btn-outline-secondary" %>
            <%= f.submit "Send Message", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
