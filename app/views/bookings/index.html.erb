<% provide :title, "Booking Requests" %>

<div class="row mb-4">
  <div class="col-12">
    <h1 class="display-5 fw-bold mb-2">
      <i class="bi bi-calendar-check me-2 text-primary"></i>Booking Requests
    </h1>
    <p class="text-muted">Manage your booking requests and rentals</p>
  </div>
</div>

<!-- Booking Requests (as Owner) -->
<% if @bookings_as_owner.any? %>
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0 fw-bold">
            <i class="bi bi-hand-thumbs-up me-2 text-info"></i>Requests for My Items
          </h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <% @bookings_as_owner.each do |booking| %>
              <div class="list-group-item border-0 px-0 py-3">
                <div class="row align-items-center">
                  <div class="col-md-3">
                    <% if booking.item.image.attached? %>
                      <%= image_tag booking.item.image, class: "rounded", style: "width: 100px; height: 100px; object-fit: cover;" %>
                    <% else %>
                      <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                        <i class="bi bi-image text-muted fs-1"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <h6 class="mb-1">
                      <%= link_to booking.item.title, item_path(booking.item), class: "text-decoration-none fw-bold" %>
                    </h6>
                    <p class="text-muted mb-1 small">
                      <i class="bi bi-person me-1"></i>Requested by: <strong><%= booking.renter.username || booking.renter.email %></strong>
                    </p>
                    <% if booking.status == 'approved' %>
                      <p class="text-muted mb-1 small">
                        <i class="bi bi-envelope me-1"></i>Email: <strong><%= booking.renter.email %></strong>
                      </p>
                      <p class="text-muted mb-0 small">
                        <i class="bi bi-info-circle me-1"></i><em>Please continue communication via email</em>
                      </p>
                    <% end %>
                    <p class="text-muted mb-1 small">
                      <i class="bi bi-calendar-range me-1"></i>
                      <%= booking.start_date.strftime("%b %d, %Y") if booking.start_date %> - 
                      <%= booking.end_date.strftime("%b %d, %Y") if booking.end_date %>
                    </p>
                    <p class="text-muted mb-0 small">
                      <i class="bi bi-currency-dollar me-1"></i>
                      Total: <%= number_to_currency(booking.item.price * ((booking.end_date - booking.start_date).to_i + 1)) if booking.start_date && booking.end_date %>
                    </p>
                  </div>
                  <div class="col-md-3 text-end">
                    <span class="badge bg-<%= booking.status == 'approved' ? 'success' : booking.status == 'declined' ? 'danger' : 'warning' %> mb-2 fs-6">
                      <%= booking.status.capitalize %>
                    </span>
                    <div class="d-grid gap-2">
                      <%= link_to "View Details", booking_path(booking), class: "btn btn-sm btn-outline-primary" %>
                      <% if booking.status == 'requested' %>
                        <%= button_to "Approve", approve_booking_path(booking), method: :patch, class: "btn btn-sm btn-success" %>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#declineModal<%= booking.id %>">
                          Decline
                        </button>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <% unless booking == @bookings_as_owner.last %>
                <hr class="my-0">
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Decline Modals -->
  <% @bookings_as_owner.each do |booking| %>
    <% if booking.status == 'requested' %>
      <div class="modal fade" id="declineModal<%= booking.id %>" tabindex="-1" aria-labelledby="declineModalLabel<%= booking.id %>" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="declineModalLabel<%= booking.id %>">
                <i class="bi bi-x-circle me-2 text-danger"></i>Decline Booking Request
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <%= form_with url: decline_booking_path(booking), method: :patch, local: true do |f| %>
              <div class="modal-body">
                <p class="mb-3">Are you sure you want to decline this booking request? Please provide a reason:</p>
                <div class="mb-3">
                  <%= f.label :decline_reason, "Reason for declining:", class: "form-label" %>
                  <%= f.text_area :decline_reason, class: "form-control", rows: 4, placeholder: "Enter your reason for declining this booking request...", required: true %>
                  <small class="form-text text-muted">This reason will be shared with the renter.</small>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <%= f.submit "Decline Booking", class: "btn btn-danger" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>

<!-- My Rentals (as Renter) -->
<% if @bookings_as_renter.any? %>
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-bottom">
          <h5 class="mb-0 fw-bold">
            <i class="bi bi-cart-check me-2 text-success"></i>My Rentals
          </h5>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <% @bookings_as_renter.each do |booking| %>
              <div class="list-group-item border-0 px-0 py-3">
                <div class="row align-items-center">
                  <div class="col-md-3">
                    <% if booking.item.image.attached? %>
                      <%= image_tag booking.item.image, class: "rounded", style: "width: 100px; height: 100px; object-fit: cover;" %>
                    <% else %>
                      <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 100px; height: 100px;">
                        <i class="bi bi-image text-muted fs-1"></i>
                      </div>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <h6 class="mb-1">
                      <%= link_to booking.item.title, item_path(booking.item), class: "text-decoration-none fw-bold" %>
                    </h6>
                    <p class="text-muted mb-1 small">
                      <i class="bi bi-person me-1"></i>Owner: <strong><%= booking.owner.username || booking.owner.email %></strong>
                    </p>
                    <% if booking.status == 'approved' %>
                      <p class="text-muted mb-1 small">
                        <i class="bi bi-envelope me-1"></i>Email: <strong><%= booking.owner.email %></strong>
                      </p>
                      <p class="text-muted mb-0 small">
                        <i class="bi bi-info-circle me-1"></i><em>Please continue communication via email</em>
                      </p>
                    <% end %>
                    <p class="text-muted mb-1 small">
                      <i class="bi bi-calendar-range me-1"></i>
                      <%= booking.start_date.strftime("%b %d, %Y") if booking.start_date %> - 
                      <%= booking.end_date.strftime("%b %d, %Y") if booking.end_date %>
                    </p>
                    <p class="text-muted mb-0 small">
                      <i class="bi bi-currency-dollar me-1"></i>
                      Total: <%= number_to_currency(booking.item.price * ((booking.end_date - booking.start_date).to_i + 1)) if booking.start_date && booking.end_date %>
                    </p>
                  </div>
                  <div class="col-md-3 text-end">
                    <span class="badge bg-<%= booking.status == 'approved' ? 'success' : booking.status == 'declined' ? 'danger' : 'warning' %> mb-2 fs-6">
                      <%= booking.status.capitalize %>
                    </span>
                    <div class="d-grid gap-2">
                      <%= link_to "View Details", booking_path(booking), class: "btn btn-sm btn-outline-primary" %>
                      <% if booking.status == 'approved' %>
                        <%= link_to "Pay Now", new_booking_payment_path(booking), class: "btn btn-sm btn-success" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
              <% unless booking == @bookings_as_renter.last %>
                <hr class="my-0">
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Empty State -->
<% if @bookings_as_owner.empty? && @bookings_as_renter.empty? %>
  <div class="row">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body text-center py-5">
          <i class="bi bi-calendar-x display-1 text-muted mb-3"></i>
          <h4 class="text-muted mb-3">No Bookings Yet</h4>
          <p class="text-muted mb-4">You don't have any booking requests or rentals at the moment.</p>
          <div class="d-flex gap-2 justify-content-center">
            <%= link_to "Browse Items", items_path, class: "btn btn-primary" %>
            <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-outline-secondary" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Back to Dashboard -->
<div class="row mt-4">
  <div class="col-12">
    <%= link_to dashboard_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
    <% end %>
  </div>
</div>
