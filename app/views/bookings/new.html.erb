<h1>Request Booking for <%= @item.title %></h1>

<%= form_with model: @booking, url: bookings_path do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.hidden_field :renter_id, value: current_user.id %>
  <%= f.hidden_field :owner_id, value: @item.owner.id %>

  <div>
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <%= f.submit "Submit Booking Request",
               style: "padding: 10px 15px; background: #4CAF50; color: white; border-radius: 5px;" %>

<% end %>
