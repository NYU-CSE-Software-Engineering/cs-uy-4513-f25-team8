<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-primary text-white">
        <h2 class="card-title mb-0">
          <i class="bi bi-calendar-check me-2"></i>Request Booking
        </h2>
      </div>
      <div class="card-body p-4">
        <% unless @item %>
          <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Item not found. Please try again.
          </div>
          <div class="text-center mt-4">
            <%= link_to "Back to Items", items_path, class: "btn btn-primary" %>
          </div>
        <% else %>
        <!-- Item Summary -->
        <div class="card bg-light mb-4">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col-md-3">
                <% if @item.image.attached? %>
                  <%= image_tag @item.image, class: "img-fluid rounded", style: "max-height: 150px; width: 100%; object-fit: cover;" %>
                <% else %>
                  <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-image text-white display-4"></i>
                  </div>
                <% end %>
              </div>
              <div class="col-md-9">
                <h4 class="fw-bold mb-2"><%= @item.title %></h4>
                <p class="text-muted mb-2"><%= truncate(@item.description, length: 150) if @item.description.present? %></p>
                <div class="d-flex align-items-center gap-3">
                  <span class="h5 text-primary mb-0 fw-bold">
                    <%= number_to_currency(@item.price) %> <small class="text-muted fs-6">/day</small>
                  </span>
                  <% if @item.category.present? %>
                    <span class="badge bg-light text-dark border">
                      <i class="bi bi-tag me-1"></i><%= @item.category %>
                    </span>
                  <% end %>
                </div>
                <% if @item.available_from.present? || @item.available_to.present? %>
                  <div class="mt-2">
                    <small class="text-muted">
                      <i class="bi bi-calendar-range me-1"></i>
                      <% if @item.available_from.present? && @item.available_to.present? %>
                        Available: <%= @item.available_from.strftime("%b %d, %Y") %> - <%= @item.available_to.strftime("%b %d, %Y") %>
                      <% elsif @item.available_from.present? %>
                        Available from: <%= @item.available_from.strftime("%b %d, %Y") %>
                      <% elsif @item.available_to.present? %>
                        Available until: <%= @item.available_to.strftime("%b %d, %Y") %>
                      <% end %>
                    </small>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <%= form_with model: @booking, url: bookings_path, local: true, class: "needs-validation", novalidate: true do |f| %>
          <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.hidden_field :renter_id, value: current_user.id %>
          <%= f.hidden_field :owner_id, value: @item.owner.id %>

          <% if @booking.errors.any? %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <h5 class="alert-heading">
                <i class="bi bi-exclamation-triangle me-2"></i>
                Please fix the following errors:
              </h5>
              <ul class="mb-0">
                <% @booking.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>

          <div class="row g-3">
            <div class="col-md-6">
              <%= f.label :start_date, "Rental Start Date", class: "form-label fw-semibold" %>
              <%= f.date_field :start_date, 
                  class: "form-control form-control-lg", 
                  min: [@item.available_from, Date.today].compact.max&.to_s,
                  max: @item.available_to&.to_s,
                  required: true %>
              <div class="form-text">
                <i class="bi bi-info-circle me-1"></i>
                Select when you want to start renting this item
              </div>
            </div>

            <div class="col-md-6">
              <%= f.label :end_date, "Rental End Date", class: "form-label fw-semibold" %>
              <%= f.date_field :end_date, 
                  class: "form-control form-control-lg", 
                  min: [@item.available_from, Date.today].compact.max&.to_s,
                  max: @item.available_to&.to_s,
                  required: true %>
              <div class="form-text">
                <i class="bi bi-info-circle me-1"></i>
                Select when you want to return this item
              </div>
            </div>

            <div class="col-12">
              <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>Note:</strong> The owner will review your request and may approve or decline it. You'll be notified once they respond.
              </div>
            </div>

            <div class="col-12 mt-4">
              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <%= link_to "Cancel", item_path(@item), class: "btn btn-outline-secondary btn-lg me-md-2" %>
                <%= f.submit "Request Booking", class: "btn btn-primary btn-lg px-5" %>
              </div>
            </div>
          </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const startDate = document.querySelector('input[name="booking[start_date]"]');
    const endDate = document.querySelector('input[name="booking[end_date]"]');

    if (startDate && endDate) {
      startDate.addEventListener('change', function() {
        if (this.value) {
          endDate.min = this.value;
          // If end_date is already set and is before the new start_date, clear it
          if (endDate.value && endDate.value < this.value) {
            endDate.value = '';
          }
        }
      });

      endDate.addEventListener('change', function() {
        if (startDate.value && this.value && this.value < startDate.value) {
          alert('End date must be after start date');
          this.value = '';
        }
      });
    }
  });
</script>
