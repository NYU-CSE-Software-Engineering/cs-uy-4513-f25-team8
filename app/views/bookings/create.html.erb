<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-lg border-0 text-center">
      <div class="card-body p-5">
        <div class="mb-4">
          <i class="bi bi-check-circle-fill text-success display-1"></i>
        </div>
        <h1 class="display-5 fw-bold mb-3">Booking Request Submitted!</h1>
        <p class="lead text-muted mb-4">
          Your booking request has been successfully submitted. The owner will review your request and you'll be notified once they respond.
        </p>
        <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
          <%= link_to "View My Bookings", dashboard_path, class: "btn btn-primary btn-lg me-md-2" %>
          <%= link_to "Browse More Items", items_path, class: "btn btn-outline-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
</div>
