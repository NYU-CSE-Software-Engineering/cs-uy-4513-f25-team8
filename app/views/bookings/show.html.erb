<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm border-0 mb-4">
      <div class="card-header bg-primary text-white">
        <h2 class="card-title mb-0">
          <i class="bi bi-calendar-check me-2"></i>Booking Details
        </h2>
      </div>
      <div class="card-body p-4">
        <!-- Booking Status -->
        <div class="alert alert-<%= @booking.status == 'approved' ? 'success' : @booking.status == 'declined' ? 'danger' : 'info' %> mb-4">
          <div class="d-flex align-items-center">
            <i class="bi bi-<%= @booking.status == 'approved' ? 'check-circle' : @booking.status == 'declined' ? 'x-circle' : 'clock' %> me-2 fs-4"></i>
            <div>
              <strong>Status: <%= @booking.status.capitalize %></strong>
              <p class="mb-0 small">
                <% if @booking.status == 'requested' %>
                  <% if current_user == @booking.owner %>
                    This booking request is pending your approval.
                  <% else %>
                    Your booking request is pending approval from the owner.
                  <% end %>
                <% elsif @booking.status == 'declined' %>
                  This booking request has been declined by the owner.
                  <% if @booking.decline_reason.present? %>
                    <br><strong>Reason:</strong> <%= @booking.decline_reason %>
                  <% end %>
                <% else %>
                  Your booking has been approved! You can proceed with payment.
                <% end %>
              </p>
            </div>
          </div>
        </div>

        <!-- Item Information -->
        <div class="card bg-light mb-4">
          <div class="card-body">
            <h5 class="fw-bold mb-3">
              <i class="bi bi-box-seam me-2 text-primary"></i>Item Information
            </h5>
            <div class="row align-items-center">
              <div class="col-md-3">
                <% if @item.image.attached? %>
                  <%= image_tag @item.image, class: "img-fluid rounded", style: "max-height: 150px; width: 100%; object-fit: cover;" %>
                <% else %>
                  <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 150px;">
                    <i class="bi bi-image text-white display-4"></i>
                  </div>
                <% end %>
              </div>
              <div class="col-md-9">
                <h4 class="fw-bold mb-2"><%= @item.title %></h4>
                <p class="text-muted mb-2"><%= truncate(@item.description, length: 150) if @item.description.present? %></p>
                <div class="d-flex align-items-center gap-3">
                  <span class="h5 text-primary mb-0 fw-bold">
                    <%= number_to_currency(@item.price) %> <small class="text-muted fs-6">/day</small>
                  </span>
                  <% if @item.category.present? %>
                    <span class="badge bg-light text-dark border">
                      <i class="bi bi-tag me-1"></i><%= @item.category %>
                    </span>
                  <% end %>
                </div>
                <div class="mt-2">
                  <small class="text-muted">
                    <i class="bi bi-person me-1"></i>Owner: <%= @item.owner.username || @item.owner.email %>
                  </small>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Booking Details -->
        <div class="card border-0 mb-4">
          <div class="card-body">
            <h5 class="fw-bold mb-3">
              <i class="bi bi-calendar-range me-2 text-primary"></i>Rental Period
            </h5>
            <div class="row g-3">
              <div class="col-md-6">
                <small class="text-muted d-block">Start Date</small>
                <strong class="fs-5"><%= @booking.start_date.strftime("%B %d, %Y") if @booking.start_date %></strong>
              </div>
              <div class="col-md-6">
                <small class="text-muted d-block">End Date</small>
                <strong class="fs-5"><%= @booking.end_date.strftime("%B %d, %Y") if @booking.end_date %></strong>
              </div>
              <% if @booking.start_date && @booking.end_date %>
                <div class="col-12">
                  <small class="text-muted d-block">Total Days</small>
                  <strong class="fs-5">
                    <%= (@booking.end_date - @booking.start_date).to_i + 1 %> 
                    <%= (@booking.end_date - @booking.start_date).to_i == 0 ? 'day' : 'days' %>
                  </strong>
                </div>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="d-flex gap-2 justify-content-end flex-wrap">
        
          <% if current_user == @booking.owner && @booking.status == 'requested' %>
        
            <!-- Approve -->
            <%= form_with url: approve_booking_path(@booking), method: :patch, class: "m-0" do %>
              <button class="btn btn-success btn-sm px-4">Approve</button>
            <% end %>
        
            <!-- Decline (Modal Trigger) -->
            <button type="button"
                    class="btn btn-danger btn-sm px-4"
                    data-bs-toggle="modal"
                    data-bs-target="#declineModal">
              Decline
            </button>
        
          <% end %>
        
          <!-- Back -->
          <%= link_to "Back to Dashboard", dashboard_path, class: "btn btn-outline-secondary btn-sm px-4" %>
        
        </div>
        

