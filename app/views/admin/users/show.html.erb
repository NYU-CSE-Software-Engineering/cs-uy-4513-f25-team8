<h1>User Details: <%= @user.username %></h1>

<% if notice.present? %>
  <p style="color: green;"><%= notice %></p>
<% end %>

<% if alert.present? %>
  <p style="color: red;"><%= alert %></p>
<% end %>

<div>
  <p><strong>Username:</strong> <%= @user.username %></p>
  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Role:</strong> <%= @user.role %></p>
  <p><strong>Account Status:</strong> <%= @user.account_status %></p>
  <p><strong>Report Count:</strong> <%= @user.report_count %></p>
  <p><strong>Account Created:</strong> <%= @user.created_at %></p>
</div>

<div>
  <h2>Account Management</h2>
  <% if @user.account_status == 'active' %>
    <%= form_with url: admin_user_path(@user), method: :patch, local: true do |f| %>
      <%= f.hidden_field :account_status, value: 'disabled' %>
      <%= f.submit "Disable Account" %>
    <% end %>
  <% else %>
    <%= form_with url: admin_user_path(@user), method: :patch, local: true do |f| %>
      <%= f.hidden_field :account_status, value: 'active' %>
      <%= f.submit "Enable Account" %>
    <% end %>
  <% end %>
</div>

<div>
  <%= link_to "Back to User List", admin_users_path %>
</div>

