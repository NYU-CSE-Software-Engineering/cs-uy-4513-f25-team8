<h1>Log in</h1>

<%= form_with url: "/login", method: :post, local: true do %>
  <div>
    <label>Email</label>
    <%= text_field_tag :email %>
  </div>

  <div>
    <label>Password</label>
    <%= password_field_tag :password %>
  </div>

  <div>
    <button type="submit">Log in</button>
  </div>
<% end %>
