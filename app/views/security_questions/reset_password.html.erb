<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-lg border-0">
      <div class="card-body p-5">

        <div class="text-center mb-4">
          <i class="bi bi-key text-success display-4 mb-3"></i>
          <h2 class="fw-bold mb-2">Reset Your Password</h2>
          <p class="text-muted">Enter a new password for your account.</p>
        </div>

        <%= form_with model: @user,
                      url: security_questions_update_password_path(@user.id),
                      method: :patch, local: true do |f| %>

          <div class="mb-3">
            <%= f.label :password, "New Password", class: "form-label fw-semibold" %>
            <%= f.password_field :password,
                                 class: "form-control form-control-lg",
                                 placeholder: "Enter new password",
                                 required: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation,
                        "Confirm New Password",
                        class: "form-label fw-semibold" %>
            <%= f.password_field :password_confirmation,
                                 class: "form-control form-control-lg",
                                 placeholder: "Confirm new password",
                                 required: true %>
          </div>

          <div class="d-grid mt-4">
            <%= f.submit "Update Password", class: "btn btn-success btn-lg" %>
          </div>

        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= link_to "Back to Sign In",
                      new_user_session_path,
                      class: "text-primary fw-semibold text-decoration-none" %>
        </div>

      </div>
    </div>
  </div>
</div>
