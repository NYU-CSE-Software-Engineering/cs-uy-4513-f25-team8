<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-lg border-0">
      <div class="card-body p-5">

        <div class="text-center mb-4">
          <i class="bi bi-shield-lock text-primary display-4 mb-3"></i>
          <h2 class="fw-bold mb-2">Verify Your Identity</h2>
          <p class="text-muted">
            Answer the questions you set up when creating your account.
          </p>
        </div>

        <%= form_with url: security_questions_check_answers_path(@user.id),
                      method: :post, local: true do %>

          <div class="mb-4">
            <label class="form-label fw-semibold">
              <%= @user.security_question_1 %>
            </label>
            <input type="text"
                   name="answer_1"
                   class="form-control form-control-lg"
                   placeholder="Your answer"
                   required>
          </div>

          <div class="mb-4">
            <label class="form-label fw-semibold">
              <%= @user.security_question_2 %>
            </label>
            <input type="text"
                   name="answer_2"
                   class="form-control form-control-lg"
                   placeholder="Your answer"
                   required>
          </div>

          <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary btn-lg">
              Verify Answers
            </button>
          </div>

        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= link_to "Back to Sign In",
                      new_user_session_path,
                      class: "text-primary fw-semibold text-decoration-none" %>
        </div>

      </div>
    </div>
  </div>
</div>
