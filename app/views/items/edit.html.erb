<h1>Editing Item</h1>

<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
        <% @item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :price_per_day, "Price per day" %>
    <%= form.number_field :price_per_day, step: 0.01 %>
  </div>

  <div class="field">
    <%= form.label :category, "Category" %>
    <%= form.select :category, options_for_select(Item::CATEGORIES, @item.category), prompt: 'Select a category' %>
  </div>

  <div class="field">
    <%= form.label :description, "Description" %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :availability, "Availability" %>
    <%= form.select :availability, ['available', 'unavailable'], prompt: 'Select availability' %>
  </div>

  <div class="field">
    <%= form.label :image, "Item image" %>
    <%= form.file_field :image %>
    <% if @item.image.attached? %>
      <p>Current image: <%= @item.image.filename %></p>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit "Update Item" %>
  </div>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>