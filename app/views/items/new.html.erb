<h1>New Item</h1>

<%= form_with model: @item, url: items_path, local: true do |f| %>
  <%= f.label :title, "Title" %>
  <%= f.text_field :title %>

  <%= f.label :price, "Price per day" %>
  <%= f.number_field :price, step: 0.01 %>

  <%= f.label :category, "Category" %>
  <%= f.select :category, ["Electronics", "Clothing", "Furniture"] %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :availability_status, "Availability" %>
  <%= f.select :availability_status, ["available", "unavailable"] %>

  <%= f.label :image, "Item image" %>
  <%= f.file_field :image %>

  <%= f.submit "Create Item" %>
<% end %>
