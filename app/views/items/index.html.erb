<div class="row mb-4">
  <div class="col-12">
    <h1 class="display-5 fw-bold mb-3">
      <i class="bi bi-search me-2 text-primary"></i>Browse Items
    </h1>
    <p class="text-muted">Search and filter through available rental items</p>
  </div>
</div>

<!-- Search and Filter Form -->
<div class="card shadow-sm mb-4">
  <div class="card-body">
    <%= form_with url: items_path, method: :get, local: true, class: "row g-3" do |f| %>
      <div class="col-md-4">
        <%= f.label :keyword, "Search", class: "form-label fw-semibold" %>
        <%= f.text_field :keyword, value: params[:keyword], class: "form-control", placeholder: "Search by title or description..." %>
      </div>

      <div class="col-md-2">
        <%= f.label :category, "Category", class: "form-label fw-semibold" %>
        <%= f.select :category, options_for_select([["All Categories", ""], ["Electronics", "Electronics"], ["Clothing", "Clothing"], ["Furniture", "Furniture"], ["Sports", "Sports"], ["Tools", "Tools"], ["Other", "Other"]], params[:category]), {}, { class: "form-select" } %>
      </div>

      <div class="col-md-3">
        <%= f.label :start_date, "Available From", class: "form-label fw-semibold" %>
        <%= f.date_field :start_date, value: params[:start_date], class: "form-control" %>
      </div>

      <div class="col-md-3">
        <%= f.label :end_date, "Available To", class: "form-label fw-semibold" %>
        <%= f.date_field :end_date, value: params[:end_date], class: "form-control" %>
      </div>

      <div class="col-12">
        <%= f.submit "Search", class: "btn btn-primary me-2" %>
        <%= link_to "Clear", items_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Search Results -->
<div class="row">
  <% if @items.any? %>
    <% @items.each do |item| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm border-0 item-card">
          <%= link_to item_path(item), class: "text-decoration-none text-dark" do %>
            <div class="position-relative" style="height: 250px; overflow: hidden; background-color: #f8f9fa;">
              <% if item.image.attached? %>
                <%= image_tag item.image, class: "card-img-top h-100 w-100", style: "object-fit: cover;" %>
              <% else %>
                <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                  <i class="bi bi-image display-1 text-muted"></i>
                </div>
              <% end %>
              <span class="badge bg-<%= item.availability_status == 'available' ? 'success' : item.availability_status == 'pending' ? 'warning' : 'secondary' %> position-absolute top-0 end-0 m-2">
                <%= item.availability_status.capitalize %>
              </span>
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title fw-bold mb-2"><%= item.title %></h5>
              <p class="card-text text-muted small flex-grow-1">
                <%= truncate(item.description, length: 100) if item.description.present? %>
              </p>
              <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-2">
                  <div>
                    <span class="h5 text-primary mb-0 fw-bold">
                      <%= number_to_currency(item.price) %>
                      <small class="text-muted fs-6">/day</small>
                    </span>
                    <% if item.deposit_amount.present? && item.deposit_amount > 0 %>
                      <div class="small text-muted">
                        <i class="bi bi-shield-check me-1"></i>Deposit: <%= number_to_currency(item.deposit_amount) %>
                      </div>
                    <% end %>
                  </div>
                  <% if item.category.present? %>
                    <span class="badge bg-light text-dark border">
                      <i class="bi bi-tag me-1"></i><%= item.category %>
                    </span>
                  <% end %>
                </div>
                <div class="mb-2">
                  <small class="text-muted d-block mb-1">Payment:</small>
                  <div class="d-flex flex-wrap gap-1">
                    <% if item.payment_methods == "credit_card" || item.payment_methods == "both" %>
                      <span class="badge bg-primary" style="font-size: 0.7rem;">
                        <i class="bi bi-credit-card"></i>
                      </span>
                    <% end %>
                    <% if item.payment_methods == "cash" || item.payment_methods == "both" %>
                      <span class="badge bg-success" style="font-size: 0.7rem;">
                        <i class="bi bi-cash-coin"></i>
                      </span>
                    <% end %>
                  </div>
                </div>
                <div class="text-muted small">
                  <i class="bi bi-person me-1"></i>Owner: <%= item.owner.username || item.owner.email %>
                </div>
                <% if item.available_from.present? || item.available_to.present? %>
                  <div class="text-muted small mt-1">
                    <i class="bi bi-calendar-range me-1"></i>
                    <% if item.available_from.present? && item.available_to.present? %>
                      <%= item.available_from.strftime("%b %d") %> - <%= item.available_to.strftime("%b %d, %Y") %>
                    <% elsif item.available_from.present? %>
                      From <%= item.available_from.strftime("%b %d, %Y") %>
                    <% elsif item.available_to.present? %>
                      Until <%= item.available_to.strftime("%b %d, %Y") %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="col-12">
      <div class="card shadow-sm border-0">
        <div class="card-body text-center py-5">
          <i class="bi bi-inbox display-1 text-muted mb-3"></i>
          <h4 class="text-muted">No items found</h4>
          <p class="text-muted">Try adjusting your search criteria or <%= link_to "browse all items", items_path, class: "text-primary" %>.</p>
        </div>
      </div>
    </div>
  <% end %>
</div>
