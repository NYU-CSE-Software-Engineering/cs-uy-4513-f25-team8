<% if resource.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" data-turbo-cache="false">
    <h5 class="alert-heading">
      <i class="bi bi-exclamation-triangle me-2"></i>
      <%= pluralize(resource.errors.count, "error") %> prohibited this <%= resource.class.model_name.human.downcase %> from being saved:
    </h5>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
