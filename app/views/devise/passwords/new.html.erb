<div class="row justify-content-center">
  <div class="col-md-6 col-lg-5">
    <div class="card shadow-lg border-0">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <i class="bi bi-shield-lock text-primary display-4 mb-3"></i>
          <h2 class="fw-bold mb-2">Forgot Your Password?</h2>
          <p class="text-muted">Enter your username to verify your identity.</p>
        </div>

        <%= form_with url: security_questions_lookup_path, method: :post, local: true do |f| %>

          <div class="mb-3">
            <label for="username" class="form-label fw-semibold">Username</label>
            <input type="text"
                   name="username"
                   id="username"
                   class="form-control form-control-lg"
                   placeholder="Enter your username"
                   required>
          </div>

          <div class="d-grid mb-3">
            <button type="submit" class="btn btn-primary btn-lg">
              Continue
            </button>
          </div>

        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <%= link_to "Back to Sign In", new_session_path(resource_name), class: "text-primary fw-semibold text-decoration-none" %>
        </div>

      </div>
    </div>
  </div>
</div>
