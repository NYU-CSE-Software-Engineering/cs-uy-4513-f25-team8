<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card shadow-lg border-0">
      <div class="card-body p-5">
        <div class="text-center mb-4">
          <i class="bi bi-person-plus text-primary display-4 mb-3"></i>
          <h2 class="fw-bold mb-2">Create Your Account</h2>
          <p class="text-muted">Join Rent It! and start renting or listing items today</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="row g-3">
            <!-- Role Selection -->
            <div class="col-12">
              <%= f.label :role, "I want to register as a", class: "form-label fw-semibold" %>
              <%= f.select :role, 
                  options_for_select([
                    ["Renter - Browse and rent items", "renter"],
                    ["Owner - List and rent out items", "owner"]
                  ], resource.role),
                  {},
                  { class: "form-select form-select-lg", required: true } %>
              <div class="form-text">Choose your role. You can list items as an owner or rent items as a renter.</div>
            </div>

            <!-- Username -->
            <div class="col-12">
              <%= f.label :username, class: "form-label fw-semibold" %>
              <%= f.text_field :username, autofocus: true, class: "form-control form-control-lg", placeholder: "Choose a username", required: true %>
            </div>

            <!-- Email -->
            <div class="col-12">
              <%= f.label :email, class: "form-label fw-semibold" %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Enter your email address", required: true %>
            </div>

            <!-- Password -->
            <div class="col-md-6">
              <%= f.label :password, class: "form-label fw-semibold" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Create a password", required: true %>
              <% if @minimum_password_length %>
                <div class="form-text">
                  <i class="bi bi-info-circle me-1"></i>
                  Minimum <%= @minimum_password_length %> characters
                </div>
              <% end %>
            </div>

            <!-- Password Confirmation -->
            <div class="col-md-6">
              <%= f.label :password_confirmation, "Confirm Password", class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder: "Confirm your password", required: true %>
            </div>

            <!-- SECURITY QUESTIONS -->
            <hr class="mt-4">

            <div class="col-12">
              <%= f.label :security_question_1, "Security Question 1", class: "form-label fw-semibold" %>
              <%= f.text_field :security_question_1, class: "form-control form-control-lg", placeholder: "e.g., What is your favorite childhood pet's name?", required: true %>
            </div>

            <div class="col-12">
              <%= f.label :security_answer_1, "Answer", class: "form-label fw-semibold" %>
              <%= f.text_field :security_answer_1, class: "form-control form-control-lg", placeholder: "Enter your answer", required: true %>
            </div>

            <div class="col-12 mt-3">
              <%= f.label :security_question_2, "Security Question 2", class: "form-label fw-semibold" %>
              <%= f.text_field :security_question_2, class: "form-control form-control-lg", placeholder: "e.g., What is the street you grew up on?", required: true %>
            </div>

            <div class="col-12">
              <%= f.label :security_answer_2, "Answer", class: "form-label fw-semibold" %>
              <%= f.text_field :security_answer_2, class: "form-control form-control-lg", placeholder: "Enter your answer", required: true %>
            </div>


            <!-- Submit Button -->
            <div class="col-12 mt-3">
              <div class="d-grid">
                <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
              </div>
            </div>
          </div>
        <% end %>

        <hr class="my-4">

        <div class="text-center">
          <p class="text-muted mb-0">
            Already have an account? 
            <%= link_to "Sign in here", new_session_path(resource_name), class: "text-primary fw-semibold text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
