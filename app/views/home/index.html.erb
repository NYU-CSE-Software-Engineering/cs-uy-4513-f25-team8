<div class="row">
  <div class="col-lg-8 mx-auto text-center">
    <h1 class="display-4 fw-bold mb-4">
      <i class="bi bi-box-seam text-primary"></i> Welcome to Rent It!
    </h1>
    <p class="lead text-muted mb-5">
      Rent everyday items. List your items and earn money. 
      Browse thousands of items available for rent.
    </p>
    
    <div class="row g-4 mb-5">
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <i class="bi bi-search display-4 text-primary mb-3"></i>
            <h5 class="card-title">Browse Items</h5>
            <p class="card-text text-muted">Find exactly what you need from our wide selection</p>
            <%= link_to "Browse Now", items_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <i class="bi bi-plus-circle display-4 text-success mb-3"></i>
            <h5 class="card-title">List Your Item</h5>
            <p class="card-text text-muted">Earn money by renting out your unused items</p>
            <% if user_signed_in? %>
              <%= link_to "List Item", new_item_path, class: "btn btn-success" %>
            <% else %>
              <%= link_to "Sign Up to List", new_user_registration_path, class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card h-100 border-0 shadow-sm">
          <div class="card-body text-center">
            <i class="bi bi-envelope display-4 text-info mb-3"></i>
            <h5 class="card-title">Contact Us</h5>
            <p class="card-text text-muted">Have questions or feedback? Let us know!</p>
            <%= link_to "Get in Touch", new_contact_path, class: "btn btn-info" %>
          </div>
        </div>
      </div>
    </div>

    <% unless user_signed_in? %>
      <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <%= link_to "Get Started", new_user_registration_path, class: "btn btn-primary btn-lg me-md-2" %>
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
